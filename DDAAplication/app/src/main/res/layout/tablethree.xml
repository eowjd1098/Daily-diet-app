<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtube_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이동하기" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="다리살 허벅지살 빼는 최고의 운동 BEST5 \n"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="운동명\n"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="#FF007F" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1.와이드 스쿼트, 2.사이드 레그레이즈, 3.크런치킥, 4.클램쉘, 5.시저크로스\n"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="운동부위\n"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="#FF007F" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1.허벅지 전체 + 안쪽 운동\n2.허벅지 바깥쪽 운동\n3.허벅지 안쪽 운동\n
4.허벅지 안쪽 운동\n5.허벅지 전체 + 뒤쪽 운동\n"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="운동횟수\n"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="#FF007F" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1~5번 운동을 각각 10회씩 하루 1번 3세트씩 진행"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="#000000" />


    </LinearLayout>
</ScrollView>